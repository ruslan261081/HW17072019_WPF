<Window x:Class="HW17072019_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW17072019_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" 

                x:Name="number1Txt"  Margin="43,44,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" TextChanged="number1Txt_TextChanged"/>

        <TextBox HorizontalAlignment="Left" Height="23" 

                 x:Name="number2Txt" Margin="206,44,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" TextChanged="number2Txt_TextChanged"/>

        <TextBlock HorizontalAlignment="Left" Margin="48,176,0,0" 

                  x:Name="resultTxtBlk" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" RenderTransformOrigin="0.97,6.119"/>



        <Label Content="+" HorizontalAlignment="Left" Height="38" Margin="175,39,0,0" VerticalAlignment="Top" Width="28"/>

        <Button Content="SUM" HorizontalAlignment="Left" 

                x:Name="sumBtn" Margin="48,125,0,0" VerticalAlignment="Top" Width="75"

                Click="sumBtn_Click"/>
    </Grid>
</Window>
